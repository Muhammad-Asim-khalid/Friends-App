<div class = 'container'>

  <div class="jumbotron jumbotron-fluid">
    <h1 class="display-4">
      <%= @friend.first_name %>
      <%= @friend.last_name %>
    </h1>
    <p class="lead"><%= @friend.email %></p>
    <p class="lead"><%= @friend.phone %></p>
    <p class="lead">
      <%= link_to 'Edit', edit_friend_path(@friend),class:"btn btn-outline-dark" %>
      <%= link_to 'Back', friends_path, class:"btn btn-outline-dark" %>
    </p>
  </div>
</div>